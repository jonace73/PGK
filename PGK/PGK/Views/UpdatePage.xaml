<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PGK.Views.UpdatePage"
    NavigationPage.HasNavigationBar="false"
    BackgroundImageSource="@drawable/SkyNarrow">

    <!-- Header -->
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" Margin="0">
            <Image Source="@drawable/LogoPGK.png" HorizontalOptions="Start"/>
            <Label Text="Proclaim God's Kingdom" TextColor="White" FontSize="Large" VerticalOptions="Center"/>
        </StackLayout>
    </Shell.TitleView>

    <!-- Content -->
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Image x:Name="BlessedTrinityImage" Source="@drawable/BlessedTrinity" VerticalOptions="Start" Margin="21" />
            <Label Text="Please wait till the update finishes." VerticalOptions="End" HorizontalOptions="Center" Margin="5" />
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>